<div class="col-md-6 translations">
  <form>
    <h3>{{key}}</h3>
    {{#each translations}}
      <div class="form-group">
        <label>{{name}}</label> {{input type="text" value=value}}
        <button {{action submitAction this target="controller"}}>Submit</button>
      </div>
    {{/each}}
  </form>
</div>