<div class="col-md-4 translations">
  <form>
    <h3>{{key}}</h3>
    <p {{bind-attr class='isUpdated:active :updated'}}><strong>Updated!</strong></p>
    {{#each translations}}
      <div class="form-group">
        <label>{{name}}</label>
        {{input type="text" class="form-control" value=value}}
        <button class="btn btn-primary" {{action submitAction this }}>Submit</button>
      </div>
    {{/each}}
  </form>
</div>